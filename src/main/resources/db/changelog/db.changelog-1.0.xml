<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro
        http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

    <changeSet  id="2024-10-04 Add book table"  author="Rasmus Sander">
        <createTable  tableName="abandoned_place">
            <column  name="id"  type="bigint"  autoIncrement="true">
                <constraints  primaryKey="true"/>
            </column>
            <column  name="name"  type="text"/>
            <column  name="location"  type="bigint"/>
            <column  name="type"  type="text"/>
            <column  name="condition"  type="text"/>
        </createTable>
    </changeSet>


    <!-- ChangeSet for the users table -->
    <changeSet id="1" author="author_name">
        <createTable tableName="users">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="points" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp"/>
        </createTable>
    </changeSet>

    <!-- ChangeSet for the locations table -->
    <changeSet id="2" author="placeholder">
        <createTable tableName="locations">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="lon" type="float">
                <constraints nullable="false"/>
            </column>
            <column name="lat" type="float">
                <constraints nullable="false"/>
            </column>
            <column name="condition" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="accessibility" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="additional_information" type="varchar(255)"/>
            <column name="is_public" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(10)"/>
            <column name="required_points" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="locations" baseColumnNames="created_by"
                                 referencedTableName="users" referencedColumnNames="id"
                                 constraintName="fk_locations_created_by"/>
    </changeSet>

    <!-- ChangeSet for the location_types table -->
    <changeSet id="3" author="author_name">
        <createTable tableName="location_types">
            <column name="id" type="integer">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- ChangeSet for the location_type_assignments table -->
    <changeSet id="4" author="author_name">
        <createTable tableName="location_type_assignments">
            <column name="location_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="integer">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="location_type_assignments" baseColumnNames="location_id"
                                 referencedTableName="locations" referencedColumnNames="id"
                                 constraintName="fk_location_type_assignments_location_id"/>
        <addForeignKeyConstraint baseTableName="location_type_assignments" baseColumnNames="category_id"
                                 referencedTableName="location_types" referencedColumnNames="id"
                                 constraintName="fk_location_type_assignments_category_id"/>
        <addUniqueConstraint tableName="location_type_assignments" columnNames="location_id, category_id"/>
    </changeSet>

    <!-- ChangeSet for the location_bookmarks table -->
    <changeSet id="5" author="author_name">
        <createTable tableName="location_bookmarks">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="bookmark_type" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="location_id" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="location_bookmarks" baseColumnNames="created_by"
                                 referencedTableName="users" referencedColumnNames="id"
                                 constraintName="fk_location_bookmarks_created_by"/>
        <addForeignKeyConstraint baseTableName="location_bookmarks" baseColumnNames="location_id"
                                 referencedTableName="locations" referencedColumnNames="id"
                                 constraintName="fk_location_bookmarks_location_id"/>
        <addUniqueConstraint tableName="location_bookmarks" columnNames="created_by, location_id, bookmark_type"/>
    </changeSet>

    <!-- ChangeSet for the subtopics table -->
    <changeSet id="6" author="author_name">
        <createTable tableName="subtopics">
            <column name="id" type="integer">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="description" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="location_id" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="subtopics" baseColumnNames="location_id"
                                 referencedTableName="locations" referencedColumnNames="id"
                                 constraintName="fk_subtopics_location_id"/>
    </changeSet>

    <!-- ChangeSet for the subtopic_comments table -->
    <changeSet id="7" author="author_name">
        <createTable tableName="subtopic_comments">
            <column name="id" type="integer">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="subtopic_id" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="body" type="text"/>
            <column name="created_by" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="subtopic_comments" baseColumnNames="subtopic_id"
                                 referencedTableName="subtopics" referencedColumnNames="id"
                                 constraintName="fk_subtopic_comments_subtopic_id"/>
        <addForeignKeyConstraint baseTableName="subtopic_comments" baseColumnNames="created_by"
                                 referencedTableName="users" referencedColumnNames="id"
                                 constraintName="fk_subtopic_comments_created_by"/>
    </changeSet>

    <!-- ChangeSet for the posts table -->
    <changeSet id="8" author="author_name">
        <createTable tableName="posts">
            <column name="id" type="integer">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(255)"/>
            <column name="body" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="location_id" type="uuid"/>
            <column name="created_by" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="posts" baseColumnNames="location_id"
                                 referencedTableName="locations" referencedColumnNames="id"
                                 constraintName="fk_posts_location_id"/>
        <addForeignKeyConstraint baseTableName="posts" baseColumnNames="created_by"
                                 referencedTableName="users" referencedColumnNames="id"
                                 constraintName="fk_posts_created_by"/>
    </changeSet>

    <!-- ChangeSet for the upvotes table -->
    <changeSet id="9" author="author_name">
        <createTable tableName="upvotes">
            <column name="id" type="integer">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="post_id" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="upvotes" baseColumnNames="post_id"
                                 referencedTableName="posts" referencedColumnNames="id"
                                 constraintName="fk_upvotes_post_id"/>
        <addForeignKeyConstraint baseTableName="upvotes" baseColumnNames="user_id"
                                 referencedTableName="users" referencedColumnNames="id"
                                 constraintName="fk_upvotes_user_id"/>
    </changeSet>

    <!-- ChangeSet for the post_comments table -->
    <changeSet id="10" author="author_name">
        <createTable tableName="post_comments">
            <column name="id" type="integer">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="body" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="post_id" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="post_comments" baseColumnNames="post_id"
                                 referencedTableName="posts" referencedColumnNames="id"
                                 constraintName="fk_post_comments_post_id"/>
        <addForeignKeyConstraint baseTableName="post_comments" baseColumnNames="created_by"
                                 referencedTableName="users" referencedColumnNames="id"
                                 constraintName="fk_post_comments_created_by"/>
    </changeSet>

</databaseChangeLog>